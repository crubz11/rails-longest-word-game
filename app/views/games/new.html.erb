<h1 class="title">New Game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <p class="letter"><%= letter.upcase %></p>
  <% end %>
</div>
<div class="label-form">
  <label class="label" for="form">What is the longest word you can find?</label>
  <form action="/score" method="POST" data-turbo="false" class="form text-center">
    <input type="hidden" name="letters" value="<%= @letters %>">
    <input type="text" name="input" class="text-input">
    <input type="submit" value="Ask!" class="button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
